default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :release do
    setup_ci if ENV['CI']

    # App Store Connect API Key 설정 (세션 만료 없이 영구 사용 가능)
    if ENV['APP_STORE_CONNECT_API_KEY_KEY_ID']
      app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY_KEY'],
        is_key_content_base64: true
      )
    end

    # Match로 인증서 가져오기
    match(
      type: "appstore",
      readonly: true,
      git_url: "https://github.com/USW-Circle-Link/USW-Circle-Link-FastlaneCert.git"
    )

    # CocoaPods 설치
    cocoapods(
      podfile: "./Podfile",
      repo_update: true
    )

    # Flutter 빌드
    sh("cd ../.. && flutter build ios --release --no-codesign --no-pub")

    # Xcode 프로젝트 서명 설정
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Runner.xcodeproj",
      team_id: ENV["FASTLANE_TEAM_ID"],
      profile_name: "match AppStore com.usw.flag.uswCircleLink",
      code_sign_identity: "Apple Distribution"
    )

    # iOS 빌드
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,
      xcargs: "-allowProvisioningUpdates",
      export_options: {
        provisioningProfiles: {
          "com.usw.flag.uswCircleLink" => "match AppStore com.usw.flag.uswCircleLink"
        }
      }
    )

    # TestFlight 업로드
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
